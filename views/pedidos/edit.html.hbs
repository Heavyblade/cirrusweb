<h2 id="nuevo_pedido">Editar Pedido</h2>
<br/>
<form id="pedidos_form" action="/pedidos" role="form" method="post">
    <input id="id_pedido" type="hidden" value="{{id}}">
    <div class="form-group">
        <label for="total_pedido">Total Pedido:</label>
        <input type="text" class="form-control" name="total_pedido" value="{{total}}">
    <div/>
    <div class="form-group">
        <label for="fecha">Fecha: (yyyy-mm-dd)</label>
        <input type="text" class="form-control" name="fecha" value="{{fecha}}">
    </div>    
    <div class="form-group">
        <label>Cliente</label>
        <select name="cliente" class="form-control">
            {{#each clientes}}
            <option value="{{id}}">{{nombre}}</option>
            {{/each}}
        </select>
    </div>
</form>

<script>
    $("select").val('{{cliente}}')
</script>
