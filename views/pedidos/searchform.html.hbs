<div class="search_pedido">
    <h2 id="nuevo_pedido">Buscar Pedido</h2>
    <br/>
    <form action="/pedidos/search" role="form" method="get">
        <div class="form-group">
            <label for="fecha">Fecha Desde: (yyyy-mm-dd)</label>
            <input type="text" class="form-control" name="fecha_desde">
        </div>
        
        <div class="form-group">
            <label for="fecha">Fecha Hasta: (yyyy-mm-dd)</label>
            <input type="text" class="form-control" name="fecha_hasta">
        </div>
        
        <div class="form-group">
            <label>Cliente</label>
            <select name="cliente" class="form-control">
                {{#each clientes}}
                <option value="{{id}}">{{nombre}}</option>
                {{/each}}
            </select>
        </div>
        <br/>
        <br/>
        <input class="btn btn-primary" type="submit" value="Buscar">
        <br/>
        <br/>
    </form>
</div>
